@page
@model OSS.Core.AdminUI.Apis.Mem.AnonymousModel
@{
    ViewData["Title"] = "登录页面";
    Layout = "~/Pages/Portal/_PortalLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8" id="login-component">
        <div class="card-group">
            <div class="card p-4">
                <div class="card-body">
                    <h1>Login</h1>
                    <p class="text-muted">Sign In to your account</p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-user"></i>
                            </span>
                        </div>
                        <input class="form-control" type="text"
                               name="user_name" v-model="login.user_name"
                               v-bind:class="{ 'is-invalid':errors.has('user_name')}"
                               v-validate="'required'" data-vv-as="用户名"
                               placeholder="输入用户名！" />

                        <div class="invalid-feedback">{{ errors.first('user_name') }}</div>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="icon-lock"></i>
                            </span>
                        </div>
                        @*is-invalid*@
                        <input class="form-control" type="password" v-model="login.password" name="password" placeholder="请输入密码！">
                        <div class="invalid-feedback"></div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-primary px-4" type="button">Login</button>
                        </div>
                        <div class="col-6 text-right">
                            <button class="btn btn-link px-0" type="button">Forgot password?</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                <div class="card-body text-center">
                    <div>
                        <h2>Sign up</h2>
                        <p>
                        </p>
                        <button class="btn btn-primary active mt-3" type="button">
                            Register Now!
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

