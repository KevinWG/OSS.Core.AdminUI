@page

@model OSS.Infrastructure.Web.PageFilters.AnonymousPage
@using OSS.Infrastructure.Web.WebExtentions

@{
    ViewData["Title"] = "Register";
    Layout = HttpContext.Request.IsPjax() ? "_PjaxLayout" : "_RootLayout";
}

@section Headers{
    <style>
        body {
            background-color: #f9f9f9;
        }
    </style>
}
<div class="container modify-con">
    <div class="row login-title">
    </div>
    <div class="col-sm-6 offset-3 login-box" id="login-component">
        <form role="form">
            <div class="form-group">
                <label class="sr-only">手机号/邮箱:</label>
                <input type="text" class="form-control" v-model="login.user_name" name="user_name"
                       data-vv-as="手机号" v-validate="'required'" placeholder="手机号/邮箱" />
                <div class="text-danger hide" v-bind:class="{ show:errors.has('user_name')}">{{ errors.first('user_name') }}</div>
            </div>

            <div class="input-group">
                <label class="sr-only">验证码/密码:</label>
                <input type="text" class="form-control" v-model="login.password" name="password"
                       data-vv-as="验证码" v-validate="'required|min:4'" placeholder="请输入验证码" />
                <span class="input-group-append">
                    <button class="btn btn-secondary" loading-text="已发送..."
                            type="button">
                        发送验证码
                    </button>
                </span>
            </div>
            <div class="text-danger hide" v-bind:class="{ show:errors.has('password') }">{{ errors.first('password') }}</div>
            <div class="text-center">
                <button type="button" @@click="submit" class="btn btn-success login-btn">登 &nbsp; 录</button>
            </div>
        </form>

    </div>

</div>

@section Scripts
{
    <script src="~/js/pages/portal-login.js"></script>
}
