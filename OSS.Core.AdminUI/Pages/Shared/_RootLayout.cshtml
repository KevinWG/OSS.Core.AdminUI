@using OSS.Infrastructure.Utils
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="app-version" content="@AppInfoUtil.AppVersion" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title> @ViewData["Title"] | OSS.AdminUI </title>
    <partial name="Partails/_HeaderCssPartial" />
</head>
<body class="sidebar-lg-show">

<div id="oss-root-wraper">
    <div class="oss-root-container">
        @* 放在这里，非pjax加载的局部样式会被自然卸载，防止后续冲突 *@
        @RenderSection("Headers", required: false)
        @RenderBody()
    </div>
</div>

<partial name="Partails/_FooterScriptPartial"/>


    @RenderSection("Scripts", required: false)
<script>$(function() { app_start(@(AppInfoUtil.IsDev ? 1 : 0)) })</script>

</body>
</html>